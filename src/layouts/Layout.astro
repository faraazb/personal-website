---
import { ViewTransitions } from "astro:transitions";
import { Header } from "@components/header";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header client:only="preact" transition:persist />
    <div class="layout">
      <main class="content" transition:animate="fade">
        <slot />
      </main>
    </div>
    <style lang="scss" is:global>
      @use "@styles/theme";
      @use "@styles/base";
      @use "@styles/include-media" as query;

      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      .layout {
        display: flex;
        flex-direction: column;
        // added for margins on larger displays
        //align-items: center;
        height: 100%;
      }

      header {
        width: 100%;
      }

      .content {
        align-self: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 12%;
        @include query.media("<tablet") {
          margin: 0 8%;
        }
        @include query.media(">=1440px") {
          margin: 0 18%;
        }
        @include query.media(">1920px") {
          max-width: 1440px;
        }
      }

      footer {
        min-height: 10%;
        width: 100%;
        margin-top: 100px;
        flex-shrink: 0;
      }
    </style>
  </body>
</html>
